{
  "manifest_version": 3,
  "name": "Insert NOW",
  "version": "1.0",
  "description": "Insert current time with right-click menu",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/now128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/now128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}